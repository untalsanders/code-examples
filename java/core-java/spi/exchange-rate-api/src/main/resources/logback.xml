<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %highlight(%-5level) --- [ %yellow(%t) ] %cyan(%-30(%logger{36})) : %msg%n
            </Pattern>
        </encoder>
    </appender>
    <root leven="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>